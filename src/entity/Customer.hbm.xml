<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="entity.Customer" table="customer" schema="ghy">
        <id name="cid">
            <column name="cid" sql-type="int(10) unsigned"/>
        </id>
        <property name="cname">
            <column name="cname" sql-type="varchar(255)"/>
        </property>
        <property name="ccard">
            <column name="ccard" sql-type="int(18) unsigned"/>
        </property>
        <property name="cbirth">
            <column name="cbirth" sql-type="date"/>
        </property>
        <property name="ctel">
            <column name="ctel" sql-type="int(11)" not-null="true"/>
        </property>
        <property name="caddress">
            <column name="caddress" sql-type="varchar(255)" not-null="true"/>
        </property>
        <property name="csex">
            <column name="csex" sql-type="smallint(1)"/>
        </property>
    </class>
</hibernate-mapping>